<li>
  
  <span class="title"><%= link_to entry.title, entry %></span>
  <span class="content">
    <%= truncate(entry.body) %>
    <br>
    <% if need_truncate?(entry.body) %>
      <%= link_to "Read more", entry %>
    <% end %>
  </span>
  <span class="timestamp">
    Posted by 
    <span class="user">
      <%= link_to entry.user.name, entry.user %>
    </span>
    <%= time_ago_in_words(entry.created_at) %> ago at
    <%= l(entry.created_at, format: :notime) %>.
    <%= pluralize(entry.comments.count, "Comment") %>.
  </span>
  <%= render 'shared/entry_delete_form', entry: entry %>

</li>