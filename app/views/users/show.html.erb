<% @title = @user.name %>

<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="span8">
  <% if @user.entries.any? %>
    <h3>Entries (<%= @user.entries.count %>)</h3>
    <ol class="entries">
      <%= render @entries %>
    </ol>
    <%= will_paginate @entries %>
  <% end %>
  </div>
</div>

<%= debug @user.entries.count %>