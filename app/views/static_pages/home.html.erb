<% @title = "Home" %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Feed</h3>
      <%= render 'shared/items' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Bloq</h1>

    <h2>
      This is the home page.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>

  </div>
  <br>
  <br>
  <br>

  <div>
    <h1 style="text-align:left">Entries</h1>
    <%= render 'shared/items' %>
  </div>
<% end %>